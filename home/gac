# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

#!/bin/zsh

function gac() {

  if [ $# -eq 0 ] || [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
    # displays help with
    # gac | gac -h | gac --help
    echo "------"
    echo "Cannot commit without comments. Semantic reminder:"
    echo "ğŸ› BUG FIX:       b" 
    echo "ğŸ“¦ CHORE:         c" 
    echo "ğŸ“– DOCS:          d" 
    echo "âœ… FEAT:          f" 
    echo "ğŸš€ NEW RELEASE:   n" 
    echo "ğŸ‘Œ IMPROVE:       i"
    echo "ğŸªš REFACTOR:      r" 
    echo "ğŸ¨ STYLE:         s"
    echo "ğŸ§ª TEST:          t"
    echo "ğŸ›   WORKING ON:    w"
    echo "------"
    return 1
  fi  

  SHORTCUT=$1
  shift ;
  COMMENT=$@


  # Fix a bug
  if [ "$SHORTCUT" = "b" ]; then
    SHORTCUT="ğŸ› BUG FIX:"

  # Chore
  elif [ "$SHORTCUT" = "c" ]; then
    SHORTCUT="ğŸ“¦ CHORE:"

  # Write or edit existing documentation
  elif [ "$SHORTCUT" = "d" ]; then
    SHORTCUT="ğŸ“– DOCS:"

  # Add new feature
  elif [ "$SHORTCUT" = "f" ]; then
    SHORTCUT="âœ… FEAT:"

  # Deploy in production
  elif [ "$SHORTCUT" = "n" ]; then
    SHORTCUT="ğŸš€ NEW RELEASE:"
  
  # Improve your code base
  elif [ "$SHORTCUT" = "i" ]; then
    SHORTCUT="ğŸ‘Œ IMPROVE:"

  # Refator your code base
  elif [ "$SHORTCUT" = "r" ]; then
    SHORTCUT="ğŸªš REFACTOR:"

  # Styling actions
  elif [ "$SHORTCUT" = "s" ]; then 
    SHORTCUT="ğŸ¨ STYLE:"

  # Test your code
  elif [ "$SHORTCUT" = "t" ]; then 
    SHORTCUT="ğŸ§ª TEST:"

  # Working on a feature
  elif [ "$SHORTCUT" = "w" ]; then 
    SHORTCUT="ğŸ›   WORKING ON:"
  fi
  
  # res with or without semantic
  git add -A && git commit -m "$SHORTCUT $COMMENT"
  return 1
}
export PATH="$HOME/.poetry/bin:$PATH"
